{
    "name": "boilerplate",
    "version": "0.1.0",
    "description": "Easy way to launch your SPA/PWA with a ready-to-go boilerplate based on using WebPack5, Vue3, Eslint7, Stylelint14",
    "private": true,
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack --mode development",
        "build": "cross-env NODE_ENV=production webpack --mode production",
        "watch": "cross-env NODE_ENV=development webpack --mode development --watch",
        "hot": "cross-env NODE_ENV=development webpack serve --mode development --hot"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zheltkevich/boilerplate.git"
    },
    "keywords": [
        "webpack",
        "vue",
        "eslint",
        "stylelint",
        "boilerplate",
        "template"
    ],
    "author": "Aleksandr Zheltkevich <zheltkevich42@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/zheltkevich/boilerplate/issues"
    },
    "homepage": "https://github.com/zheltkevich/boilerplate#readme",
    "dependencies": {
        "lodash": "^4.17.21",
        "vue": "^3.2.23",
        "vue-router": "^4.0.12",
        "vuex": "^4.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.4",
        "@vue/compiler-sfc": "^3.2.23",
        "babel-loader": "^8.2.3",
        "cross-env": "^7.0.3",
        "css-loader": "^6.5.1",
        "css-minimizer-webpack-plugin": "^3.2.0",
        "eslint": "^7.32.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.2.0",
        "eslint-plugin-vue": "^8.1.1",
        "eslint-webpack-plugin": "^3.1.1",
        "html-webpack-plugin": "^5.5.0",
        "mini-css-extract-plugin": "^2.4.5",
        "postcss-loader": "^6.2.1",
        "postcss-preset-env": "^7.0.1",
        "process": "^0.11.10",
        "sass": "^1.44.0",
        "sass-loader": "^12.3.0",
        "stylelint": "^14.1.0",
        "stylelint-config-standard": "^24.0.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-scss": "^4.0.0",
        "terser-webpack-plugin": "^5.2.5",
        "vue-loader": "^16.8.3",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.6.0"
    }
}
